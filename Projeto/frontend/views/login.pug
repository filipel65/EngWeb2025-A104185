extends layout

block content
  .w3-container(style="max-width:600px; margin:50px auto;")
    h2.w3-center Login
    if message
      .w3-panel(class=(messageType === 'error' ? 'w3-red' : (messageType === 'success' ? 'w3-green' : 'w3-blue'))).w3-padding.w3-center
        p!= message
    form(action="/login" method="POST" class="w3-container w3-card-4 w3-padding-large w3-light-grey w3-round-large")
      .w3-section
        label(for="username") username:
        input.w3-input.w3-border.w3-round(type="text" name="username" id="username" required)
      .w3-section
        label(for="password") password:
        input.w3-input.w3-border.w3-round(type="password" name="password" id="password" required)
      button.w3-button.w3-blue.w3-hover-dark-grey.w3-margin-top.w3-round-large(type="submit") Login
    p.w3-center.w3-margin-top
      | Don't have an account?
      a(href="/register") Register here
