extends layout

block content
  .w3-card-4
    header.w3-container.w3-blue
      h1= tit
    
    .w3-container
        table.w3-table-all
          tr
            th Ano 
            th Título
            th Elenco
            th Géneros

          each f in lfilmes
            tr
              td= f.year
              td
                a(href=`/filmes/${f.id}`)= f.title
              td
                ul.w3-ul
                  each at in f.cast
                    li
                        a(href=`/filmes/actor/${at}`)= at
              td
                ul.w3-ul
                  each g in f.genres
                    li= g
            
    footer.w3-container.w3-blue 
        span generated by EngWeb2025 
        a(href='/filmes') voltar