extends layout

block content
  .w3-card-4
    header.w3-container.w3-blue
      h3 Editar detalhes de filme

    .w3-container
      form(action=`/filmes/edit/${filme.id}`, method="POST")
        .w3-section
          label(for="title")
            strong Título:
          input.w3-input.w3-border(type="text", name="title", id="title", value=filme.title required)

        .w3-section
          label(for="year")
            strong Ano:
          input.w3-input.w3-border(type="number", name="year", id="year", value=filme.year required)

        .w3-section
          label
            strong Elenco:
          each actor in filme.cast
            input.w3-input.w3-border(type="text", name="cast", value=actor)
          input.w3-input.w3-border(type="text", name="cast", placeholder="...")

        .w3-section
          label
            strong Géneros:
          each genre in filme.genres
            input.w3-input.w3-border(type="text", name="genres", value=genre)
          input.w3-input.w3-border(type="text", name="genres", placeholder="...")

        .w3-section
          button.w3-button.w3-green(type="submit") Guardar alterações
    footer.w3-container.w3-blue
        span generated by EngWeb2025 
        a(href='/filmes') voltar
